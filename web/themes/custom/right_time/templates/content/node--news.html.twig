<section class="wow fadeIn blog-single-full-width-header fix-background parallax-fix">
  <img class="parallax-background-img" src="{{ image_path }}" alt="" />
  <div class="opacity-medium bg-black"></div>
  <div class="container">
    <div class="row">
      <div class="col-md-7 col-sm-8 position-relative full-width-headline text-center center-col">
        <!-- post title  -->
        <h2 class="white-text"><span>{{ label }}</span></h2>
        <!-- end post title  -->
        <!-- post date and categories  -->
        <div class="posted-by text-uppercase">Posted by {{ rtr_author_username }}</div>
        <div class="blog-date">{{ formatted_date }}</div>
        <!-- end post date and categories  -->
      </div>

    </div>
  </div>
</section>
{{ operations }}
<section class="wow fadeIn blog-details-text">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-sm-10 center-col text-center">
        <!-- post details text -->
        <p class="text-extra-large">{{ content.body }}</p>
        <!-- end post details text -->
      </div>
      <div class="col-md-8 col-sm-10 center-col text-center">
        <div class="text-center margin-ten no-margin-bottom">
          <!-- social icon -->
          <a class="btn social-icon social-icon-large button" href="#"><i class="fa fa-facebook"></i></a>
          <a class="btn social-icon social-icon-large button" href="#"><i class="fa fa-twitter"></i></a>
          <a class="btn social-icon social-icon-large button" href="#"><i class="fa fa-google-plus"></i></a>
          <a class="btn social-icon social-icon-large button" href="#"><i class="fa fa-tumblr"></i></a>
          <a class="btn social-icon social-icon-large button" href="#"><i class="fa fa-instagram"></i></a>
          <!-- end social icon -->
        </div>
      </div>
    </div>
  </div>
</section>

<section class="wow fadeIn border-top">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-sm-10 center-col text-center margin-eight no-margin-top">
        <h3 class="blog-single-full-width-h3">Related News</h3>
      </div>
    </div>
    <div class="row blog-grid-listing">
      {{ content.field_related_news }}
    </div>
  </div>
</section>
<div class="next-previous-project-style2">
  <!-- next-previous post -->
  <a class="text-uppercase border-right previous-project" href="{{ previous_alias }}"><i class="fa {{ previous_icon_class }}"></i><span>{{ previous_text }}</span></a><a class="border-right text-uppercase back-project" href="{{ url('view.latest_news.page') }}"><span>Back</span><i class="fa fa-th-large"></i></a><a class="text-uppercase next-project" href="{{ next_alias }}"><span>{{ next_text }}</span>{{ next_icon_class }}</a>
  <!-- end next-previous post -->
</div>
<!-- end content section -->
